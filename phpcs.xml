<?xml version="1.0"?>
<ruleset name="Custom Coding Standard based on Doctrine">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>
    <arg name="cache" value=".php_cs.cache"/>
    <arg name="colors"/>

    <arg value="ps"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>test</file>
    <file>example</file>

    <!-- Inherit rules from Doctrine Coding Standard -->
    <rule ref="Doctrine" />

    <rule ref="Generic.Formatting.MultipleStatementAlignment.NotSame">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.SpacingAfterParamType">
        <severity>0</severity>
    </rule>
</ruleset>
